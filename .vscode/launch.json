    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/local/gromacs/bin/gmx",   // 这里直接运行gromacs，等到plumed部分时就会停掉了
            "args": ["mdrun",
            "-s", "./em.tpr",
            "-v",
            "-deffnm", "md",
            "-ntmpi", 1,
            "-ntomp", 20,
            // "-nb", "cpu",
            // "-bonded", "cpu",
            // "-pme", "cpu",
            "-resetstep", 900,
            "-noconfout",
            "-nsteps", 1000,
            "-plumed", "plumed2.dat",
            // "-update", "cpu",
            "-gpu_id", 3,
            "-pin", "on"],
            "stopAtEntry": false,
            "logging": {
                "trace": true,
                "traceResponse": true
            },
            "cwd": "/home/zhang.ziqing/plumed_rmsd_run",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}